{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@platform/auto/*": [
        "./src/*"
      ]
    },
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
