{
  "name": "auto-statistic",
  "version": "0.0.1",
  "description": "Cars statistic service.",
  "author": "Mikalai Ulasevich <mikalaiulasevich@gmail.com>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "nest build",
    "start": "nest start",
    "start:development": "nest start --watch",
    "start:production": "node build/main",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,__test__}/**/*.ts\" --fix",
    "format": "prettier --write \"{src,__test__}/**/*.ts\"",
    "test": "npm run test:specification && npm run test:integration",
    "test:specification": "jest",
    "test:specification:watch": "jest --watch",
    "test:integration": "jest --config __test__/jest-e2e.json",
    "test:integration:watch": "jest --config __test__/jest-e2e.json --watch"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "25.1.4",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.2.5",
    "jest": "^25.1.0",
    "lint-staged": "^10.2.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|ts)": [
      "npm run lint",
      "npm run format",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "@platform/auto/(.*)": [
        "<rootDir>/../src/$1"
      ]
    },
    "rootDir": "__test__",
    "testRegex": ".specification.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
